extends index.pug

block content

  form(method='post', action= `/books/${data.bookData.id}`)
    include includes/form-error.pug

    p
      label(for='title') Title
      input#title(name='title', type='text', value= data.menuTitle !== 'New Book' ? `${data.bookData.title}` : '')
    p
      label(for='author') Author
      input#author(name='author', type='text', value= data.menuTitle !== 'New Book' ? `${data.bookData.author}` : '')
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text', value= data.menuTitle !== 'New Book' ? `${data.bookData.genre}` : '')
    p
      label(for='year') Year
      input#year(name='year', type='text', value= data.menuTitle !== 'New Book' ? `${data.bookData.year}` : '')
    p
      input(type='submit', value= 'Update Book')
  form(method='post', action=`/books/${data.bookData.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
      p
        a.button(href='/') Cancel
      p
        input(type='submit', value='Delete Book')