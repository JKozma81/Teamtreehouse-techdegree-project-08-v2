extends index.pug

block content

  form(method='post', action= '/books/new')
    include includes/form-error.pug

    p
      label(for='title') Title
      input#title(name='title', type='text', value= data.isTitleMissing || data.isAuthorMissing ? `${data.bookData.title}` : '')
    p
      label(for='author') Author
      input#author(name='author', type='text', value= data.isTitleMissing || data.isAuthorMissing ? `${data.bookData.author}` : '')
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text', value= (data.isTitleMissing || data.isAuthorMissing) && `${data.bookData.genre}` || '')
    p
      label(for='year') Year
      input#year(name='year', type='text', value= data.isTitleMissing || data.isAuthorMissing ? `${data.bookData.year}` : '')
    p
      input(type='submit', value= 'Create New Book')
    p
      a.button(href='/') Cancel
